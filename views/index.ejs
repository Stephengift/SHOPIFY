<% layout("layouts/boilerplate") %>
<h1>All Image</h1>
<div>
    <a href="/images/new">Add Image</a>
</div>

<% for (let image of images) {%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= image.image %>">
            </div>
            <div class="col-mg-8">
                <div class="card-body">
                    <h5 class="card-title"><%=image.title %></h5>
                    <h5 class="card-title"><%=image.description %></h5>
                    <a class="btn btn-primary" href="/images/<%=image._id %>"> View <%=image.title %></a>

                </div>
            </div>
        </div>

    </div>
    <% }%>

